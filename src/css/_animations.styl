/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transition all 0.5s
  transform translateX(-120%) rotate(1000deg)
  max-height 0
  padding 0 !important
  &.order-enter-active
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0) rotate(0)

.order-leave
  transition all 0.5s
  transform translateX(0) rotate(0)
  &.order-leave-active
    transform translateX(120%) rotate(1000deg)
    max-height 0
    padding 0

.count-enter
  transition all 0.5s
  transform translateY(100%) //start it off screen
  &.count-enter-active
    transform translateY(0) //bring it to its resting spot

.count-leave
  transition all 0.5s
  position absolute // to stop CSS from pushing the #s off
  left 0
  bottom 0
  transform translateY(0) // start it on resting spot
  &.count-leave-active
    transform translateY(-100%) // push it up off screen
